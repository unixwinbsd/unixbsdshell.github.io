---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:yandex="http://news.yandex.ru"
    xmlns:media="http://search.yahoo.com/mrss/"
    xmlns:turbo="http://turbo.yandex.ru">
    <channel>
        <title>{{ site.title | xml_escape }}</title>
        <description>{{ site.description | xml_escape }}</description>
        <link>{{ site.url }}</link>
    	<language>{{ site.lang }}</language>
	<copyright>{{ site.copyright }} </copyright>
        <turbo:analytics>95812963</turbo:analytics>
	<turbo:analytics id="95812963" type="Yandex" params=""></turbo:analytics>
	<turbo:analytics type="custom" url="https://ya.ru/"></turbo:analytics>
	<turbo:analytics type="MailRu" id="95812963"></turbo:analytics>
        <turbo:adNetwork></turbo:adNetwork>
        <sy:updatePeriod>daily</sy:updatePeriod>
        <sy:updateFrequency>1</sy:updateFrequency>
        <atom:link href="{{ site.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />
        <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>

	{% for post in site.posts %}
	<item turbo="true">
	<title>{{ post.title | xml_escape }}</title>
        {% if site.author %}
        <dc:creator>{{ site.author | xml_escape }}</dc:creator>
        <author>{{ site.author | xml_escape }}</author>
        {% endif %}
	<turbo:source>{{ site.url }}{{ page.url }}</turbo:source>
	<turbo:topic>{{ post.title | xml_escape }}</turbo:topic>
	<pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
	<link>{{ site.url }}{{ post.url }}</link>
	<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
		{% if post.excerpt %}
		<description>{{ post.excerpt | xml_escape }}</description>
		{% else %}
		<description>{{ post.content | xml_escape }}</description>
		{% endif %}
	<turbo:content type="html">
	{{ post.content | xml_escape }}
	</turbo:content>

	</item>
	{% endfor %}

    </channel>
</rss>